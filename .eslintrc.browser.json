{
	"root": true,
	"env": {
		"browser": true,
		"es2022": true
	},
	"plugins": [
		"es-x"
	],
	"extends": [
		"plugin:es-x/restrict-to-es2018"
	],
	"parserOptions": {
		"ecmaVersion": 13
	},
	"rules": {
		"es-x/no-array-prototype-flat": 0,
		"es-x/no-global-this": 0
	},
	"overrides": [
		{
			"files": "extensions/dist/gh-page.js",
			"parserOptions": {
				"sourceType": "module"
			},
			"rules": {
				"es-x/no-dynamic-import": 0
			}
		}
	],
	"settings": {
		"es-x": {
			"aggressive": true
		}
	}
}
