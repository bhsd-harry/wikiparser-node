{
	"env": {
		"browser": true,
		"es2021": true
	},
	"plugins": [
		"promise"
	],
	"extends": [
		"eslint:recommended",
		"plugin:promise/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 13
	},
	"ignorePatterns": [
		"webpack.config.js",
		"bundle.js",
		"bundle.min.js"
	],
	"rules": {
		"array-callback-return": [
			2,
			{
				"checkForEach": true
			}
		],
		"no-await-in-loop": 2,
		"no-constant-binary-expression": 2,
		"no-constructor-return": 2,
		"no-fallthrough": 1,
		"no-promise-executor-return": 2,
		"no-self-compare": 2,
		"no-template-curly-in-string": 2,
		"no-undef": [
			2,
			{
				"typeof": true
			}
		],
		"no-unmodified-loop-condition": 2,
		"no-unreachable-loop": 2,
		"no-unsafe-negation": [
			2,
			{
				"enforceForOrderingRelations": true
			}
		],
		"no-unsafe-optional-chaining": [
			2,
			{
				"disallowArithmeticOperators": true
			}
		],
		"no-unused-vars": [
			2,
			{
				"varsIgnorePattern": "AstNode|AstElement|[a-zA-Z]*Token",
				"ignoreRestSiblings": true
			}
		],
		"no-use-before-define": [
			2,
			{
				"functions": false,
				"classes": false,
				"variables": false
			}
		],
		"require-atomic-updates": [
			2,
			{
				"allowProperties": true
			}
		],
		"block-scoped-var": 2,
		"class-methods-use-this": 0,
		"consistent-this": 2,
		"curly": 2,
		"default-case": 2,
		"default-case-last": 2,
		"default-param-last": 2,
		"dot-notation":2,
		"eqeqeq": 2,
		"func-names": [
			2,
			"never"
		],
		"logical-assignment-operators": [
			2,
			"always",
			{
				"enforceForIfStatements": true
			}
		],
		"multiline-comment-style": 2,
		"new-cap": [
			1,
			{
				"capIsNew": false
			}
		],
		"no-alert": 2,
		"no-array-constructor": 2,
		"no-bitwise": 2,
		"no-control-regex": 0,
		"no-else-return": 2,
		"no-empty": [
			2,
			{
				"allowEmptyCatch": true
			}
		],
		"no-eval": 2,
		"no-extend-native": 2,
		"no-extra-boolean-cast": [
			2,
			{
				"enforceForLogicalOperands": true
			}
		],
		"no-floating-decimal": 2,
		"no-implied-eval": 2,
		"no-invalid-this": [
			2,
			{
				"capIsConstructor": false
			}
		],
		"no-lone-blocks": 2,
		"no-lonely-if": 2,
		"no-loop-func": 2,
		"no-multi-assign": 2,
		"no-multi-str": 2,
		"no-nested-ternary": 1,
		"no-new": 0,
		"no-new-func": 2,
		"no-new-object": 2,
		"no-new-wrappers": 2,
		"no-octal-escape": 2,
		"no-param-reassign": 0,
		"no-return-assign": 2,
		"no-return-await": 2,
		"no-script-url": 2,
		"no-sequences": 2,
		"no-shadow": [
			2,
			{
				"builtinGlobals": false
			}
		],
		"no-undef-init": 2,
		"no-unneeded-ternary": [
			2,
			{
				"defaultAssignment": false
			}
		],
		"no-unused-expressions": 2,
		"no-useless-computed-key": [
			2,
			{
				"enforceForClassMembers": true
			}
		],
		"no-useless-concat": 2,
		"no-useless-constructor": 2,
		"no-useless-rename": 2,
		"no-useless-return": 2,
		"no-var": 2,
		"no-void": 2,
		"object-shorthand": 2,
		"one-var-declaration-per-line": 2,
		"operator-assignment": 2,
		"prefer-arrow-callback": 2,
		"prefer-const": 2,
		"prefer-destructuring": 2,
		"prefer-exponentiation-operator": 2,
		"prefer-object-spread": 2,
		"prefer-regex-literals": [
			2,
			{
				"disallowRedundantWrapping": true
			}
		],
		"prefer-rest-params": 2,
		"prefer-spread": 2,
		"prefer-template": 1,
		"quote-props": [
			2,
			"as-needed"
		],
		"radix": [
			2,
			"as-needed"
		],
		"require-await": 2,
		"spaced-comment": 2,
        "strict": 2,
		"symbol-description": 2,
		"yoda": 2,
		"array-bracket-spacing": 2,
		"arrow-parens": [
			2,
			"as-needed"
		],
		"arrow-spacing": 2,
		"block-spacing": 2,
		"brace-style": 2,
		"comma-dangle": [
			2,
			"always-multiline"
		],
		"comma-spacing": 2,
		"comma-style": 2,
		"computed-property-spacing": 2,
		"dot-location": [
			2,
			"property"
		],
		"eol-last": 2,
		"func-call-spacing": 2,
		"indent": [
			2,
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"key-spacing": 2,
		"keyword-spacing": 2,
		"linebreak-style": 2,
		"multiline-ternary": [
			2,
			"always-multiline"
		],
		"new-parens": 2,
		"no-extra-parens": 2,
		"no-multi-spaces": 2,
		"no-multiple-empty-lines": [
			2,
			{
				"max": 1
			}
		],
		"no-trailing-spaces": 2,
		"no-whitespace-before-property": 2,
		"operator-linebreak": [
			2,
			"before"
		],
		"padded-blocks": [
			2,
			"never"
		],
		"quotes": [
			2,
			"single",
			{
				"avoidEscape": true,
				"allowTemplateLiterals": true
			}
		],
		"rest-spread-spacing": 2,
		"semi": 2,
		"semi-spacing": 2,
		"semi-style": 2,
		"space-before-blocks": 2,
		"space-before-function-paren": [
			2,
			{
				"anonymous": "never",
				"named": "never",
				"asyncArrow": "always"
			}
		],
		"space-in-parens": 2,
		"space-infix-ops": 2,
		"space-unary-ops": 2,
		"switch-colon-spacing": 2,
		"template-curly-spacing": 2,
		"wrap-iife": [
			2,
			"inside"
		],
		"promise/no-multiple-resolved": 1
	}
}
