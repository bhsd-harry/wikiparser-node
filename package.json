{
	"name": "wikiparser-node",
	"version": "1.0.0-beta.4b",
	"description": "A Node.js parser for MediaWiki markup with AST",
	"keywords": [
		"mediawiki",
		"wikitext",
		"parser"
	],
	"homepage": "https://github.com/bhsd-harry/wikiparser-node/wiki",
	"bugs": {
		"url": "https://github.com/bhsd-harry/wikiparser-node/issues"
	},
	"license": "GPL-3.0",
	"author": "Bhsd",
	"files": [
		"/bundle/bundle.min.js",
		"/extensions/",
		"!/extensions/gh-page.*",
		"!/extensions/.eslintrc.json",
		"/config/",
		"/i18n/"
	],
	"browser": "/bundle/bundle.min.js",
	"main": "./bundle/bundle.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bhsd-harry/wikiparser-node.git"
	},
	"scripts": {
		"build": "rm bundle/*.js; webpack build --mode development; webpack build --mode production",
		"diff": "git diff --ignore-all-space --color-moved",
		"lint:ts": "eslint --cache --ignore-pattern '/dist/' .",
		"lint:json": "ajv -s config/.schema.json -d 'config/*.json' --strict=true --strict-required=false",
		"lint:css": "stylelint extensions/*.css",
		"lint": "npm run lint:ts && npm run lint:json && npm run lint:css"
	},
	"devDependencies": {
		"@cypress/request": "^3.0.1",
		"@types/node": "^20.9.0",
		"@types/request": "^2.48.12",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"ajv-cli": "^5.0.0",
		"esbuild-loader": "^4.0.2",
		"eslint": "^8.53.0",
		"eslint-plugin-es-x": "^5.4.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jsdoc": "^46.8.2",
		"eslint-plugin-json-es": "^1.5.7",
		"eslint-plugin-n": "^16.3.1",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-regexp": "^2.1.1",
		"eslint-plugin-unicorn": "^49.0.0",
		"typescript": "^5.0.3",
		"webpack-cli": "^4.10.0",
		"webpack": "^5.73.0"
	},
	"engines": {
		"node": "^20.9.0"
	}
}
