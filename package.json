{
	"name": "wikilint",
	"version": "1.1.0",
	"description": "A Node.js linter for MediaWiki markup",
	"keywords": [
		"mediawiki",
		"wikitext",
		"lint",
		"linter"
	],
	"homepage": "https://github.com/bhsd-harry/wikiparser-node/tree/lint#readme",
	"bugs": {
		"url": "https://github.com/bhsd-harry/wikiparser-node/issues"
	},
	"license": "GPL-3.0",
	"author": "Bhsd",
	"files": [
		"/index.js",
		"/config/",
		"/lib/",
		"/mixin/",
		"/parser/",
		"/src/",
		"/util/",
		"/typings/",
		"/dist/"
	],
	"bin": {
		"wikilint": "./bin/cli.js"
	},
	"types": "./dist/index.d.ts",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bhsd-harry/wikiparser-node.git"
	},
	"scripts": {
		"build": "rm -rf dist/ && tsc && grep -rl '/typings' dist/ | xargs gsed -i 's|/typings|/../typings|g' && node ./bin/tsc.js",
		"test": "eslint . && ajv -s config/.schema.json -d 'config/*.json' --strict=true --strict-required=false && npx wikilint test/single-page.wiki",
		"real": "node test/real.js",
		"single": "node test/single.js"
	},
	"devDependencies": {
		"@types/node": "^17.0.23",
		"eslint": "^8.30.0",
		"eslint-plugin-n": "^15.6.0",
		"eslint-plugin-regexp": "^1.11.0",
		"eslint-plugin-unicorn": "^45.0.2",
		"eslint-plugin-jsdoc": "^1.0.0",
		"eslint-plugin-json-es": "^1.5.7",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"typescript": "^4.6.3",
		"@typescript-eslint/eslint-plugin": "^5.47.1",
		"@typescript-eslint/parser": "^5.47.1",
		"ajv-cli": "^5.0.0",
		"request": "^2.88.2"
	},
	"engines": {
		"node": "^18.4.0"
	}
}
