{
	"name": "wikiparser-node",
	"version": "1.22.1",
	"description": "A Node.js parser for MediaWiki markup with AST",
	"keywords": [
		"mediawiki",
		"wikitext",
		"parser"
	],
	"homepage": "https://github.com/bhsd-harry/wikiparser-node/wiki",
	"bugs": {
		"url": "https://github.com/bhsd-harry/wikiparser-node/issues"
	},
	"license": "GPL-3.0",
	"author": "Bhsd",
	"files": [],
	"main": "./bundle/bundle-lsp.min.js",
	"types": "./dist/index.d.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bhsd-harry/wikiparser-node.git"
	},
	"scripts": {
		"bundle:core": "esbuild index.ts --charset=utf8 --bundle --target=es2024 --format=cjs --drop-labels=LSP --outfile=build/bundle.js",
		"bundle:lsp": "esbuild index.ts --charset=utf8 --bundle --target=es2024 --format=cjs --outfile=build/bundle-lsp.js",
		"build:css": "esbuild css/index.css --bundle --minify --outfile=extensions/ui.css",
		"build:core": "npm run bundle:core && esbuild build/bundle.js --charset=utf8 --minify --target=es2019 --format=iife --sourcemap --outfile=bundle/bundle.min.js && eslint --no-eslintrc -c .eslintrc.browser.cjs bundle/bundle.min.js",
		"build:es8": "esbuild build/bundle.js --charset=utf8 --minify --target=es2017 --format=iife --outfile=bundle/bundle-es8.min.js && eslint --no-eslintrc -c .eslintrc.es8.cjs bundle/bundle-es8.min.js",
		"build:lsp": "npm run bundle:lsp && esbuild build/bundle-lsp.js --charset=utf8 --minify --target=es2019 --format=iife --sourcemap --outfile=bundle/bundle-lsp.min.js && eslint --no-eslintrc -c .eslintrc.browser.cjs bundle/bundle-lsp.min.js",
		"build:ext": "bash build-ext.sh",
		"build:test": "tsc --project tsconfig.dist.json",
		"build": "npm run build:core && npm run build:es8 && npm run build:lsp && npm run build:test && npm run build:css",
		"diff": "bash diff.sh",
		"diff:stat": "f() { git diff --stat --ignore-all-space --color=always $1 $2 -- . | grep '\\.ts'; }; f",
		"lint:ts": "tsc --noEmit && tsc --noEmit --project extensions/tsconfig.json && tsc --noEmit --project extensions/tsconfig.codejar.json && eslint --cache .",
		"lint:json": "v8r -s config/.schema.json config/*.json && mocha dist/test/json.js",
		"lint:css": "stylelint css/*.css extensions/*.css",
		"lint": "npm run lint:ts && npm run lint:json && npm run lint:css",
		"prof": "node dist/test/prof.js",
		"server": "npm run test:end; http-server .. -c-1 --cors -s &",
		"test:unit": "mocha dist/test/test.js",
		"test:parser": "mocha dist/test/parserTests.js",
		"test": "npm run test:unit && npm run test:parser",
		"test:end": "pkill -x http-server",
		"test:real": "node --enable-source-maps dist/test/real.js"
	},
	"dependencies": {
		"@bhsd/common": "^1.0.1",
		"vscode-languageserver-types": "^3.17.5"
	},
	"optionalDependencies": {
		"chalk": "^4.1.2",
		"color-name": "^2.0.0",
		"entities": "^6.0.0",
		"mathjax": "^3.2.2",
		"stylelint": "^16.23.1",
		"vscode-css-languageservice": "^6.3.7",
		"vscode-html-languageservice": "^5.5.1",
		"vscode-json-languageservice": "^5.6.1"
	},
	"devDependencies": {
		"@bhsd/code-standard": "^1.0.1",
		"@bhsd/codemirror-mediawiki": "^3.0.3",
		"@bhsd/test-util": "^0.1.0",
		"@codemirror/lint": "^6.8.5",
		"@stylistic/eslint-plugin": "^3.1.0",
		"@stylistic/stylelint-plugin": "^4.0.0",
		"@types/color-name": "^2.0.0",
		"@types/color-rgba": "^2.1.3",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.0.10",
		"@types/prismjs": "^1.26.5",
		"@typescript-eslint/eslint-plugin": "^8.35.1",
		"@typescript-eslint/parser": "^8.35.1",
		"codejar-async": "^4.2.7",
		"color-rgba": "^3.0.0",
		"esbuild": "^0.25.5",
		"eslint": "^8.57.1",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jsdoc": "^52.0.2",
		"eslint-plugin-json-es": "^1.6.0",
		"eslint-plugin-markdown": "5.1.0",
		"eslint-plugin-n": "^17.20.0",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-regexp": "^2.9.0",
		"eslint-plugin-unicorn": "^56.0.1",
		"http-server": "^14.1.1",
		"mocha": "^11.7.1",
		"monaco-editor": "^0.52.2",
		"nyc": "^17.1.0",
		"stylelint-config-recommended": "^17.0.0",
		"typescript": "^5.8.2",
		"v8r": "^5.0.0",
		"vscode-languageserver-textdocument": "^1.0.12"
	},
	"engines": {
		"node": ">=18.17.0"
	}
}
