{
	"name": "wikiparser-template",
	"version": "1.23.0",
	"description": "A light-weight template parser for MediaWiki markup",
	"keywords": [
		"mediawiki",
		"wikitext",
		"parser"
	],
	"homepage": "https://github.com/bhsd-harry/wikiparser-node/tree/template#readme",
	"bugs": {
		"url": "https://github.com/bhsd-harry/wikiparser-node/issues"
	},
	"license": "GPL-3.0",
	"author": "Bhsd",
	"files": [
		"bundle/bundle.min.js",
		"/dist/**/*.d.ts",
		"!/dist/test/"
	],
	"main": "./bundle/bundle.min.js",
	"types": "./dist/index.d.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bhsd-harry/wikiparser-node.git"
	},
	"scripts": {
		"bundle:core": "esbuild index.ts --charset=utf8 --bundle --target=es2024 --format=cjs --drop-labels=LSP --outfile=build/bundle-template.js",
		"build:core": "bash build.sh",
		"build:test": "tsc --project tsconfig.dist.json",
		"build": "npm run build:core && npm run build:test",
		"diff": "bash diff.sh",
		"diff:stat": "f() { git diff --stat --ignore-all-space --color=always $1 $2 -- . | grep '\\.ts'; }; f",
		"lint:ts": "tsc --noEmit && eslint --cache .",
		"lint": "npm run lint:ts",
		"test:parser": "mocha dist/test/parserTests.js",
		"test": "npm run test:parser",
		"test:real": "node dist/test/real.js"
	},
	"devDependencies": {
		"@bhsd/code-standard": "^1.0.1",
		"@bhsd/common": "^1.0.1",
		"@bhsd/test-util": "^0.1.0",
		"@stylistic/eslint-plugin": "^3.1.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.0.10",
		"@typescript-eslint/eslint-plugin": "^8.35.1",
		"@typescript-eslint/parser": "^8.35.1",
		"chalk": "^4.1.2",
		"esbuild": "^0.25.5",
		"eslint": "^8.57.1",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jsdoc": "^52.0.2",
		"eslint-plugin-json-es": "^1.6.0",
		"eslint-plugin-markdown": "5.1.0",
		"eslint-plugin-n": "^17.20.0",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-regexp": "^2.9.0",
		"eslint-plugin-unicorn": "^56.0.1",
		"mocha": "^11.7.1",
		"typescript": "^5.8.2"
	},
	"engines": {
		"node": ">=18.17.0"
	}
}
