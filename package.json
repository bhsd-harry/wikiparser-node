{
	"name": "wikilint",
	"version": "2.16.6",
	"description": "A Node.js linter for MediaWiki markup",
	"keywords": [
		"mediawiki",
		"wikitext",
		"lint",
		"linter"
	],
	"homepage": "https://github.com/bhsd-harry/wikiparser-node/tree/lint#readme",
	"bugs": {
		"url": "https://github.com/bhsd-harry/wikiparser-node/issues"
	},
	"license": "GPL-3.0",
	"author": "Bhsd",
	"files": [
		"/errors/README",
		"/config/",
		"/data/",
		"/i18n/",
		"/coverage/badge.svg",
		"/bin/cli.js",
		"/dist/",
		"!/dist/test/",
		"!/dist/bin/coverage.js",
		"!/dist/bin/declaration.js"
	],
	"bin": {
		"wikilint": "bin/cli.js"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bhsd-harry/wikiparser-node.git"
	},
	"scripts": {
		"declaration": "grep -rl --include='*.d.ts' '@private' dist/ | xargs bash sed.sh -i -E '/^\\s+\\/\\*\\* @private/,+1d'; grep -rl --include='*.d.ts' '/util/' dist/ | xargs bash sed.sh -i -E '/^import .+\\/util\\//d'; bash sed.sh -i -E 's/abstract (lint|print|text)\\b/\\1/' dist/lib/node.d.ts; node dist/bin/declaration.js",
		"prepublishOnly": "npm run build:core",
		"build:core": "bash build.sh",
		"build": "npm run build:core",
		"diff": "bash diff.sh",
		"diff:stat": "f() { git diff --stat --ignore-all-space --color=always $1 $2 -- . | grep '\\.ts'; }; f",
		"lint:ts": "tsc --noEmit && eslint --cache .",
		"lint:json": "v8r -s config/.schema.json config/*.json && v8r -s data/.schema.json data/*.json && node dist/test/json.js",
		"lint": "npm run lint:ts && npm run lint:json",
		"prof": "node dist/test/prof.js",
		"coverage": "nyc --cache-dir=./.cache/nyc npm test && node dist/bin/coverage.js && open coverage/index.html",
		"test:unit": "mocha dist/test/test.js",
		"test:parser": "mocha dist/test/parserTests.js",
		"test": "npm run test:unit && npm run test:parser",
		"test:end": "pkill -x http-server",
		"test:real": "node dist/test/real.js"
	},
	"nyc": {
		"exclude": [
			"dist/test/*.js"
		],
		"reporter": [
			"html",
			"text-summary",
			"json-summary"
		]
	},
	"dependencies": {
		"@bhsd/common": "^0.6.7",
		"vscode-languageserver-types": "^3.17.5"
	},
	"optionalDependencies": {
		"chalk": "^4.1.2",
		"entities": "^6.0.0",
		"minimatch": "^10.0.1",
		"stylelint": "^16.14.1",
		"vscode-css-languageservice": "^6.3.2",
		"vscode-json-languageservice": "^5.4.3",
		"vscode-languageserver-textdocument": "^1.0.12"
	},
	"devDependencies": {
		"@stylistic/eslint-plugin": "^3.1.0",
		"@stylistic/stylelint-plugin": "^3.1.2",
		"@types/color-rgba": "^2.1.3",
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.13.1",
		"@typescript-eslint/eslint-plugin": "^8.23.0",
		"@typescript-eslint/parser": "^8.23.0",
		"color-rgba": "^3.0.0",
		"esbuild": "^0.25.0",
		"eslint": "^8.57.1",
		"eslint-plugin-es-x": "^8.4.1",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jsdoc": "^50.6.3",
		"eslint-plugin-json-es": "^1.6.0",
		"eslint-plugin-markdown": "4.0.1",
		"eslint-plugin-n": "^17.15.1",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-regexp": "^2.7.0",
		"eslint-plugin-unicorn": "^56.0.1",
		"http-server": "^14.1.1",
		"mocha": "^11.1.0",
		"nyc": "^17.1.0",
		"stylelint-config-recommended": "^15.0.0",
		"typescript": "^5.7.3",
		"v8r": "^4.2.1"
	},
	"engines": {
		"node": ">=18.17.0"
	}
}
