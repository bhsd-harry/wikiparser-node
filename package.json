{
	"name": "wikiparser-node",
	"version": "1.35.2",
	"description": "A Node.js parser for MediaWiki markup with AST",
	"keywords": [
		"mediawiki",
		"wikitext",
		"parser",
		"browser"
	],
	"homepage": "https://github.com/bhsd-harry/wikiparser-node/wiki",
	"bugs": {
		"url": "https://github.com/bhsd-harry/wikiparser-node/issues"
	},
	"license": "GPL-3.0",
	"author": "Bhsd",
	"files": [],
	"main": "./bundle/bundle-lsp.min.js",
	"types": "./dist/index.d.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bhsd-harry/wikiparser-node.git"
	},
	"scripts": {
		"bundle:core": "esbuild index.ts --charset=utf8 --bundle --format=cjs --drop-labels=LSP,LINT --outfile=build/bundle.js",
		"bundle:es8": "esbuild index.ts --charset=utf8 --bundle --format=cjs --drop-labels=LSP,PRINT --outfile=build/bundle-es8.js",
		"bundle:lsp": "esbuild index.ts --charset=utf8 --bundle --format=cjs --outfile=build/bundle-lsp.js",
		"build:css": "esbuild css/index.css --bundle --minify --outfile=extensions/ui.css",
		"build:core": "npm run bundle:core && esbuild index.ts --charset=utf8 --bundle --minify --target=es2019 --format=iife --drop-labels=LSP,LINT --sourcemap --outfile=bundle/bundle.min.js && eslint --no-config-lookup -c eslint.browser.mjs bundle/bundle.min.js",
		"build:es8": "npm run bundle:es8 && esbuild index.ts --charset=utf8 --bundle --minify --target=es2017 --format=iife --drop-labels=LSP,PRINT --outfile=bundle/bundle-es8.min.js && eslint --no-config-lookup -c eslint.es8.mjs bundle/bundle-es8.min.js",
		"build:lsp": "npm run bundle:lsp && esbuild index.ts --charset=utf8 --bundle --minify --target=es2019 --format=iife --sourcemap --outfile=bundle/bundle-lsp.min.js && eslint --no-config-lookup -c eslint.browser.mjs bundle/bundle-lsp.min.js",
		"build:ext": "bash build-ext.sh",
		"build:test": "tsc --project tsconfig.dist.json",
		"build": "npm run build:core && npm run build:es8 && npm run build:lsp && npm run build:test && npm run build:css",
		"diff": "bash diff.sh",
		"diff:stat": "f() { git diff --stat --ignore-all-space --color=always $1 $2 -- . | grep '\\.ts'; }; f",
		"lint:ts": "tsc --noEmit && tsc --noEmit --project extensions/tsconfig.json && tsc --noEmit --project extensions/tsconfig.codejar.json && eslint --cache .",
		"lint:json": "v8r -s config/.schema.json config/*.json && mocha dist/test/json.js",
		"lint:css": "stylelint css/*.css extensions/*.css",
		"lint": "npm run lint:ts && npm run lint:json && npm run lint:css",
		"prof": "node dist/test/prof.js",
		"server": "npm run test:end; http-server .. -c-1 --cors -s &",
		"test:unit": "mocha --require bundle/bundle-lsp.min.js dist/test/test.js",
		"test:parser": "LC_ALL=en.UTF-8 mocha --require bundle/bundle.min.js dist/test/parserTests.js",
		"test": "npm run test:unit && npm run test:parser",
		"test:end": "pkill -x http-server",
		"test:real": "node --enable-source-maps dist/test/real.js"
	},
	"dependencies": {
		"@bhsd/common": "^1.3.1",
		"vscode-languageserver-types": "^3.17.5"
	},
	"optionalDependencies": {
		"stylelint": "^17.3.0"
	},
	"devDependencies": {
		"@bhsd/cm-util": "^0.1.0",
		"@bhsd/code-standard": "^2.0.1",
		"@bhsd/codemirror-mediawiki": "^3.11.1",
		"@bhsd/test-util": "^0.3.0",
		"@codemirror/lint": "^6.9.4",
		"@stylistic/eslint-plugin": "^5.8.0",
		"@stylistic/stylelint-plugin": "^5.0.1",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.10.13",
		"@types/prismjs": "^1.26.6",
		"@typescript-eslint/eslint-plugin": "^8.54.0",
		"@typescript-eslint/parser": "^8.54.0",
		"binary-search": "^1.3.6",
		"codejar-async": "^4.3.0",
		"color-rgba": "^3.0.0",
		"diff2html-cli": "^5.2.15",
		"esbuild": "^0.27.3",
		"eslint": "^9.39.3",
		"eslint-plugin-es-x": "^9.4.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jsdoc": "^62.7.0",
		"eslint-plugin-jsonc": "^2.21.1",
		"eslint-plugin-n": "^17.23.2",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-regexp": "^3.0.0",
		"eslint-plugin-unicorn": "^63.0.0",
		"http-server": "^14.1.1",
		"mocha": "^11.7.5",
		"monaco-editor": "^0.55.1",
		"stylelint-config-recommended": "^18.0.0",
		"stylelint-plugin-use-baseline": "^1.2.2",
		"typescript": "^5.9.3",
		"v8r": "^5.1.0"
	},
	"engines": {
		"node": ">=20.19.0"
	}
}
