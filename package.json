{
	"name": "wikiparser-template",
	"version": "1.33.0",
	"description": "A light-weight template parser for MediaWiki markup",
	"keywords": [
		"mediawiki",
		"wikitext",
		"parser",
		"browser"
	],
	"homepage": "https://github.com/bhsd-harry/wikiparser-node/tree/template#readme",
	"bugs": {
		"url": "https://github.com/bhsd-harry/wikiparser-node/issues"
	},
	"license": "GPL-3.0",
	"author": "Bhsd",
	"files": [
		"/bundle/bundle.min.js",
		"/dist/**/*.d.ts",
		"!/dist/test/"
	],
	"main": "./bundle/bundle.min.js",
	"types": "./dist/index.d.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bhsd-harry/wikiparser-node.git"
	},
	"scripts": {
		"bundle:core": "esbuild index.ts --charset=utf8 --bundle --target=es2024 --format=cjs --outfile=build/bundle-template.js",
		"build:core": "bash build.sh",
		"build:test": "tsc --project tsconfig.dist.json",
		"build": "npm run build:core && npm run build:test",
		"diff": "bash diff.sh",
		"diff:stat": "f() { git diff --stat --ignore-all-space --color=always $1 $2 -- . | grep '\\.ts'; }; f",
		"lint:ts": "tsc --noEmit && eslint --cache .",
		"lint": "npm run lint:ts",
		"test:unit": "mocha dist/test/test.js",
		"test:parser": "mocha --reporter=progress dist/test/parserTests.js",
		"test": "npm run test:unit && npm run test:parser",
		"test:real": "node --enable-source-maps dist/test/real.js"
	},
	"devDependencies": {
		"@bhsd/code-standard": "^1.3.2",
		"@bhsd/common": "^1.0.1",
		"@bhsd/test-util": "^0.2.1",
		"@stylistic/eslint-plugin": "^5.5.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.10.1",
		"@typescript-eslint/eslint-plugin": "^8.46.4",
		"@typescript-eslint/parser": "^8.46.4",
		"chalk": "^4.1.2",
		"diff2html-cli": "^5.2.15",
		"esbuild": "^0.25.12",
		"eslint": "^9.39.1",
		"eslint-plugin-es-x": "^9.1.2",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jsdoc": "^61.2.1",
		"eslint-plugin-jsonc": "^2.21.0",
		"eslint-plugin-n": "^17.23.1",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-regexp": "^2.10.0",
		"eslint-plugin-unicorn": "^62.0.0",
		"mocha": "^11.7.5",
		"typescript": "^5.9.3"
	},
	"engines": {
		"node": ">=18.17.0"
	}
}
