{
	"name": "wikilint",
	"version": "2.35.0",
	"description": "A Node.js linter for MediaWiki markup",
	"keywords": [
		"mediawiki",
		"wikitext",
		"lint",
		"linter"
	],
	"homepage": "https://github.com/bhsd-harry/wikiparser-node/tree/lint#readme",
	"bugs": {
		"url": "https://github.com/bhsd-harry/wikiparser-node/issues"
	},
	"license": "GPL-3.0",
	"author": "Bhsd",
	"files": [
		"/errors/README",
		"/config/",
		"!/config/mediawikiwiki.json",
		"!/config/testwiki.json",
		"/data/",
		"/i18n/",
		"/coverage/badge.svg",
		"/bin/*.js",
		"/dist/",
		"!/dist/script/",
		"!/dist/test/"
	],
	"bin": {
		"wikilint": "bin/cli.js",
		"getParserConfig": "bin/config.js"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bhsd-harry/wikiparser-node.git"
	},
	"scripts": {
		"prepublishOnly": "npm run build:core",
		"build:core": "bash build.sh",
		"build:define": "sed -i '' \"s/pkg = \\$PKG/pkg = $(npm pkg get name)/; s/version = \\$VERSION/version = $(npm pkg get version)/\" dist/bin/config.js",
		"build": "npm run build:core",
		"diff": "bash diff.sh",
		"diff:stat": "f() { git diff --stat --ignore-all-space --color=always $1 $2 -- . | grep '\\.ts'; }; f",
		"lint:ts": "tsc --noEmit && eslint --cache .",
		"lint:json": "v8r -s config/.schema.json config/*.json && v8r -s data/.schema.json data/*.json && mocha dist/test/json.js",
		"lint:md": "markdownlint-cli2 '*.md'",
		"lint": "npm run lint:ts && npm run lint:json && npm run lint:md",
		"prof": "node dist/test/prof.js",
		"coverage": "tsc --declaration false --target es2024 && npm run build:define && c8 npm run test:ci && node dist/script/coverage.js && open coverage/index.html",
		"test:unit": "mocha dist/test/test.js",
		"test:parser": "LC_ALL=en.UTF-8 mocha dist/test/parserTests.js",
		"test": "npm run test:unit && npm run test:parser",
		"test:parseronly": "LSP=0 npm run test:parser",
		"test:ci": "LSP=0 npm test",
		"test:end": "pkill -x http-server",
		"test:real": "node dist/test/real.js"
	},
	"c8": {
		"exclude": [
			"dist/bin/*.js",
			"dist/script/*.js",
			"dist/test/*.js"
		],
		"reporter": [
			"html",
			"text-summary",
			"json-summary"
		]
	},
	"dependencies": {
		"@bhsd/cm-util": "^0.1.0",
		"@bhsd/common": "^1.3.1",
		"@bhsd/stylelint-util": "^1.0.1",
		"binary-search": "^1.3.6",
		"vscode-languageserver-types": "^3.17.5"
	},
	"optionalDependencies": {
		"color-name": "^2.0.0",
		"entities": "^7.0.1",
		"mathoid-texvcjs": "^0.6.0",
		"minimatch": "^10.1.1",
		"stylelint": "^17.1.0",
		"vscode-css-languageservice": "^6.3.9",
		"vscode-html-languageservice": "^5.6.1",
		"vscode-json-languageservice": "^5.7.1"
	},
	"devDependencies": {
		"@bhsd/code-standard": "^2.0.0",
		"@bhsd/nodejs": "^0.1.0",
		"@bhsd/test-util": "^0.3.0",
		"@stylistic/eslint-plugin": "^5.7.1",
		"@types/color-name": "^2.0.0",
		"@types/color-rgba": "^2.1.3",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.10.9",
		"@typescript-eslint/eslint-plugin": "^8.54.0",
		"@typescript-eslint/parser": "^8.54.0",
		"c8": "^10.1.3",
		"color-rgba": "^3.0.0",
		"diff2html-cli": "^5.2.15",
		"esbuild": "^0.27.2",
		"eslint": "^9.39.2",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jsdoc": "^62.5.0",
		"eslint-plugin-jsonc": "^2.21.0",
		"eslint-plugin-n": "^17.23.2",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-regexp": "^3.0.0",
		"eslint-plugin-unicorn": "^62.0.0",
		"markdownlint-cli2": "^0.20.0",
		"mocha": "^11.7.5",
		"typescript": "^5.9.3",
		"v8r": "^5.1.0",
		"vscode-languageserver-textdocument": "^1.0.12"
	},
	"engines": {
		"node": ">=20.19.5"
	}
}
