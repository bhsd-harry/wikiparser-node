{
	"name": "wikilint",
	"version": "2.4.2",
	"description": "A Node.js linter for MediaWiki markup",
	"keywords": [
		"mediawiki",
		"wikitext",
		"lint",
		"linter"
	],
	"homepage": "https://github.com/bhsd-harry/wikiparser-node/tree/lint#readme",
	"bugs": {
		"url": "https://github.com/bhsd-harry/wikiparser-node/issues"
	},
	"license": "GPL-3.0",
	"author": "Bhsd",
	"files": [
		"/errors/README",
		"/config/",
		"/i18n/",
		"/bin/cli.js",
		"/dist/",
		"!/dist/test/",
		"!/dist/bin/declaration.js"
	],
	"bin": {
		"wikilint": "./bin/cli.js"
	},
	"main": "./dist/index.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bhsd-harry/wikiparser-node.git"
	},
	"scripts": {
		"declaration": "grep -rl --include='*.d.ts' '@private' dist/ | xargs bash sed.sh -i -E '/^\\s+\\/\\*\\* @private/,+1d'; node ./dist/bin/declaration.js",
		"prepublishOnly": "npm run build && rm dist/internal.js dist/base.js dist/[bmpu]*/*.d.ts",
		"build": "bash build.sh",
		"diff": "git diff --ignore-all-space --color-moved",
		"diff:stat": "f() { git diff --stat --ignore-all-space --color=always $1 $2 | grep '\\.ts'; }; f",
		"lint:ts": "tsc --noEmit && eslint --cache .",
		"lint:json": "ajv -s config/.schema.json -d 'config/*.json' --strict=true --strict-required=false",
		"lint": "npm run lint:ts && npm run lint:json",
		"test:end": "pkill -x http-server",
		"test:real": "node dist/test/real.js"
	},
	"devDependencies": {
		"@cypress/request": "^3.0.1",
		"@stylistic/eslint-plugin": "^1.5.4",
		"@types/node": "^20.11.6",
		"@types/request": "^2.48.12",
		"@typescript-eslint/eslint-plugin": "^6.19.1",
		"@typescript-eslint/parser": "^6.19.1",
		"ajv-cli": "^5.0.0",
		"eslint": "^8.56.0",
		"eslint-plugin-es-x": "^7.5.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jsdoc": "^48.0.2",
		"eslint-plugin-json-es": "^1.5.7",
		"eslint-plugin-n": "^16.6.2",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-regexp": "^2.2.0",
		"eslint-plugin-unicorn": "^50.0.1",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": "^20.9.0"
	}
}
