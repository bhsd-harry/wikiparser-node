{
	"name": "wikiparser-node",
	"version": "1.17.0",
	"description": "A Node.js parser for MediaWiki markup with AST",
	"keywords": [
		"mediawiki",
		"wikitext",
		"parser"
	],
	"homepage": "https://github.com/bhsd-harry/wikiparser-node/wiki",
	"bugs": {
		"url": "https://github.com/bhsd-harry/wikiparser-node/issues"
	},
	"license": "GPL-3.0",
	"author": "Bhsd",
	"files": [],
	"main": "./bundle/bundle.lsp.js",
	"types": "./dist/index.d.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bhsd-harry/wikiparser-node.git"
	},
	"scripts": {
		"build:css": "esbuild css/index.css --bundle --minify --outfile=extensions/ui.css",
		"build:core": "esbuild index.ts --bundle --minify --drop-labels=LSP --target=es2018 --sourcemap --outfile=bundle/bundle.min.js && eslint --no-eslintrc -c .eslintrc.browser.cjs bundle/bundle.min.js",
		"build:lsp": "esbuild index.ts --bundle --minify --target=es2018 --sourcemap --outfile=bundle/bundle.lsp.js && eslint --no-eslintrc -c .eslintrc.browser.cjs bundle/bundle.lsp.js",
		"build:es7": "esbuild index.ts --bundle --minify --drop-labels=LSP --target=es2016 --outfile=bundle/bundle.es7.js && eslint --no-eslintrc -c .eslintrc.es7.cjs bundle/bundle.es7.js",
		"build:ext": "bash build-ext.sh",
		"build:test": "tsc --project tsconfig.dist.json",
		"build": "npm run build:core && npm run build:es7 && npm run build:lsp && npm run build:test && npm run build:css",
		"diff": "bash diff.sh",
		"diff:stat": "f() { git diff --stat --ignore-all-space --color=always $1 $2 -- . | grep '\\.ts'; }; f",
		"lint:ts": "tsc --noEmit && tsc --noEmit --project extensions/tsconfig.json && tsc --noEmit --project extensions/tsconfig.codejar.json && eslint --cache .",
		"lint:json": "v8r -s config/.schema.json config/*.json && v8r -s data/.schema.json data/*.json && node dist/test/json.js",
		"lint:css": "stylelint extensions/*.css",
		"lint": "npm run lint:ts && npm run lint:json && npm run lint:css",
		"prof": "node dist/test/prof.js",
		"server": "npm run test:end; http-server .. -c-1 --cors -s &",
		"test:unit": "mocha dist/test/test.js",
		"test:parser": "mocha dist/test/parserTests.js",
		"test": "npm run test:unit && npm run test:parser",
		"test:server": "npm run build:core && npm run build:ext && bash sed.sh -i 's|importScripts.*|importScripts(\"http://127.0.0.1:8080/wikiparser-node/bundle/bundle.min.js\");|' extensions/dist/base.js; npm run server",
		"test:end": "pkill -x http-server",
		"test:real": "node --enable-source-maps dist/test/real.js"
	},
	"dependencies": {
		"@bhsd/codemirror-mediawiki": "^2.22.0",
		"@bhsd/common": "^0.6.6",
		"@codemirror/lint": "^6.8.4",
		"codejar-async": "^4.2.6",
		"monaco-editor": "^0.52.2",
		"vscode-languageserver-types": "^3.17.5"
	},
	"optionalDependencies": {
		"chalk": "^4.1.2",
		"entities": "^6.0.0"
	},
	"devDependencies": {
		"@stylistic/eslint-plugin": "^3.1.0",
		"@stylistic/stylelint-plugin": "^3.1.2",
		"@types/color-rgba": "^2.1.3",
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.13.1",
		"@types/prismjs": "^1.26.5",
		"@typescript-eslint/eslint-plugin": "^8.23.0",
		"@typescript-eslint/parser": "^8.23.0",
		"color-rgba": "^3.0.0",
		"esbuild": "^0.25.0",
		"eslint": "^8.57.1",
		"eslint-plugin-es-x": "^8.4.1",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jsdoc": "^50.6.3",
		"eslint-plugin-json-es": "^1.6.0",
		"eslint-plugin-markdown": "4.0.1",
		"eslint-plugin-n": "^17.15.1",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-regexp": "^2.7.0",
		"eslint-plugin-unicorn": "^56.0.1",
		"http-server": "^14.1.1",
		"mocha": "^11.1.0",
		"nyc": "^17.1.0",
		"stylelint": "^16.14.1",
		"stylelint-config-recommended": "^15.0.0",
		"typescript": "^5.7.3",
		"v8r": "^4.2.1"
	},
	"engines": {
		"node": ">=18.12.0"
	}
}
